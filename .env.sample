# GenAI Superstream Environment Variables
# Copy this file to .env and update with your actual values

# ===============================
# PERPLEXITY AI MCP CONFIGURATION
# ===============================
# Replace with your actual PerplexityAI MCP server URL from Composio
PERPLEXITY_MCP_URL=https://mcp.composio.dev/composio/server/YOUR-SERVER-ID-HERE
PERPLEXITY_MCP_SERVER_NAME=perplexityai

# ===============================
# SUPABASE CONFIGURATION
# ===============================
# Get your access token from https://supabase.com/dashboard/account/tokens
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_PATH=./duckdb_advanced.db
DB_MEMORY_LIMIT=4GB
DB_THREADS=4
DB_CACHE_ENABLED=true

# ===============================
# LOGGING CONFIGURATION
# ===============================
LOG_LEVEL=INFO

# ===============================
# OPTIONAL: API KEYS
# ===============================
# If your MCP setup requires additional API keys
# PERPLEXITY_API_KEY=your_perplexity_api_key_here
# COMPOSIO_API_KEY=your_composio_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# ===============================
# OPTIONAL: ADVANCED SETTINGS
# ===============================
# Database Performance Tuning
# DB_MAX_MEMORY=8GB
# DB_TEMP_DIRECTORY=/tmp/duckdb
# DB_CHECKPOINT_WAL_AUTO=true

# Analytics Settings
# ANALYTICS_BATCH_SIZE=100
# ANALYTICS_CACHE_TTL=3600
# ANALYTICS_ENABLE_CLUSTERING=true

# Data Quality Settings
# DATA_VALIDATION_ENABLED=true
# DATA_COMPLETENESS_THRESHOLD=0.8
# DATA_ACCURACY_THRESHOLD=0.9

# ===============================
# DEVELOPMENT SETTINGS
# ===============================
# Set to 'development' for local development, 'production' for deployment
ENVIRONMENT=development

# Enable debug mode for verbose logging
DEBUG=false

# ===============================
# SECURITY SETTINGS
# ===============================
# Secret key for session management (generate a random string)
# SECRET_KEY=your-random-secret-key-here

# CORS settings for web applications
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===============================
# INSTRUCTIONS
# ===============================
# 1. Copy this file: cp .env.sample .env
# 2. Replace placeholder values with your actual configuration
# 3. Never commit the .env file to version control
# 4. Ensure .env is listed in your .gitignore file