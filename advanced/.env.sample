# Environment variables for the advanced DuckDB implementation
# Copy this file to .env and update with your actual values

# PerplexityAI MCP Configuration
# Replace with your actual PerplexityAI MCP server URL
PERPLEXITY_MCP_URL=https://mcp.composio.dev/composio/server/YOUR-SERVER-ID-HERE
PERPLEXITY_MCP_SERVER_NAME=perplexityai

# Database Configuration
DB_PATH=./duckdb_advanced.db
DB_MEMORY_LIMIT=4GB
DB_THREADS=4
DB_CACHE_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO

# Optional: API Keys (if required by your MCP setup)
# PERPLEXITY_API_KEY=your_api_key_here
# COMPOSIO_API_KEY=your_composio_key_here

# Optional: Database Performance Tuning
# DB_MAX_MEMORY=8GB
# DB_TEMP_DIRECTORY=/tmp/duckdb
# DB_CHECKPOINT_WAL_AUTO=true

# Optional: Advanced Analytics Settings
# ANALYTICS_BATCH_SIZE=100
# ANALYTICS_CACHE_TTL=3600
# ANALYTICS_ENABLE_CLUSTERING=true

# Optional: Data Quality Settings
# DATA_VALIDATION_ENABLED=true
# DATA_COMPLETENESS_THRESHOLD=0.8
# DATA_ACCURACY_THRESHOLD=0.9